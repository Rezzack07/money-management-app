<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="22dp"
    android:backgroundTint="@android:color/white"
    app:cardElevation="4dp">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Icon bulat -->

        <!-- Hari dan bulan -->
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bluecircle"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <!-- Title + Category -->
        <LinearLayout
            android:id="@+id/dateBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/imgIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#063E71"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCT 2025"
                android:textColor="#063E71"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerCol"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/dateBlock"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spends"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="#063E71"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Food &amp; Drink"
                android:textColor="#E60B0B"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_centerVertical="true"
                android:text="Rp50.000,00"
                android:textColor="#E60B0B"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_spend"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
