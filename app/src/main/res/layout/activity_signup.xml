<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bagian atas putih -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFFFFF"/>

    <!-- Bagian bawah warna tosca -->
    <LinearLayout
        android:id="@+id/layoutTosca"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/cr50b4cd5c5"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="60dp"
        android:paddingHorizontal="37dp">

        <!-- Back to Login -->
        <LinearLayout
            android:id="@+id/layoutBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#063E71"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back to Login"/>
            <TextView
                android:id="@+id/textBackLogin"
                android:textColor="#063E71"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Back to Login"/>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/textSignUp"
            android:textColor="#063E71"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:text="Sign Up"/>
        <!-- Name -->
        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/cr30bffffff"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconName"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#063E71"/>

            <EditText
                android:id="@+id/inputName"
                android:hint="Full Name"
                android:background="@null"
                android:textColor="#063E71"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="14dp"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:id="@+id/layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/cr30bffffff"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#063E71"
                android:scaleType="fitCenter"/>
            <EditText
                android:id="@+id/inputEmail"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@null"
                android:textColor="#063E71"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="14dp"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:id="@+id/layoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/cr30bffffff"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconPassword"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#063E71"
                android:scaleType="fitCenter"/>
            <EditText
                android:id="@+id/inputPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@null"
                android:textColor="#063E71"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="14dp"/>
        </LinearLayout>

        <!-- Confirm Password -->
        <LinearLayout
            android:id="@+id/layoutConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/cr30bffffff"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconConfirmPassword"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#063E71"
                android:scaleType="fitCenter"/>
            <EditText
                android:id="@+id/inputConfirmPassword"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:background="@null"
                android:textColor="#063E71"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="14dp"/>
        </LinearLayout>

        <!-- Button Sign Up -->
        <LinearLayout
            android:id="@+id/layoutBtnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/cr30b063e71"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textBtnSignUp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sign Up"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
