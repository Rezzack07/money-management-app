<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- SCROLL VIEW WRAPPER -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:paddingTop="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Income"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#063A69"/>

                    <TextView
                        android:text="Activity"
                        android:textSize="15sp"
                        android:textColor="#063A69"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>

            <!-- PIE CHART -->
            <LinearLayout
                android:id="@+id/chartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/arrowLeft"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginEnd="12dp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/donutChart"
                    android:layout_width="340dp"
                    android:layout_height="340dp"/>

                <ImageView
                    android:id="@+id/arrowRight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- TOTAL BOX -->
            <LinearLayout
                android:id="@+id/totalIncomeBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/s063e71sw2cr20bffffff"
                android:padding="20dp"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="18dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Income"
                            android:textSize="16sp"
                            android:textColor="#9FD3B1"/>

                        <TextView
                            android:text="Rp500.000,00"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#66BB6A"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
            </LinearLayout>

            <!-- LIST ITEM -->
            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="18dp"
                android:padding="18dp"
                android:gravity="center_vertical"
                android:background="@drawable/s063e71sw2cr20bffffff">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Income"
                        android:textSize="14sp"
                        android:textColor="#063A69"/>

                    <TextView
                        android:text="Transfer Income"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#66BB6A"/>

                    <TextView
                        android:text="Rp50.000,00"
                        android:textSize="16sp"
                        android:textColor="#66BB6A"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/s063e71sw2cr50b4cd5c5"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginHorizontal="32dp"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginHorizontal="32dp"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginHorizontal="32dp"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginHorizontal="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
