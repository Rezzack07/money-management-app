<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo -->
    <LinearLayout
        android:id="@+id/header_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/logo_smartbudget"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/txt_hello"
        android:text="Hello,"
        android:textColor="#063E71"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_welcome"
        android:text="Welcome to Smart Budget"
        android:textColor="#063E71"
        android:textSize="16sp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Line under title -->
    <LinearLayout
        android:id="@+id/line_header"
        android:layout_width="240dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="#063E71"
        android:layout_marginBottom="30dp"/>

    <!-- Login container -->
    <LinearLayout
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr50b4cd5c5"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <!-- Title -->
        <TextView
            android:id="@+id/txt_login"
            android:text="Login"
            android:textColor="#063E71"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_subtitle"
            android:text="Start Managing Your Money"
            android:textColor="#063E71"
            android:textSize="14sp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Email input -->
        <LinearLayout
            android:id="@+id/input_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/cr30bffffff"
            android:paddingVertical="10dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#063E71"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/input_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#063E71"
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>

        <!-- Password input -->
        <LinearLayout
            android:id="@+id/input_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cr30bffffff"
            android:paddingVertical="10dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#063E71"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/input_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#063E71"
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>

        <!-- Login Button -->
        <LinearLayout
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/cr30b063e71"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_btn_login"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Sign up text -->
        <TextView
            android:id="@+id/txt_signup"
            android:text="Donâ€™t have an account? Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
